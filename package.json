{
  "name": "api-rest",
  "version": "1.0.0",
  "homepage": "https://github.com/quienmedebe/api-rest#readme",
  "description": "API REST from Quién Me Debe application",
  "main": "./src/app.js",
  "type": "commonjs",
  "engines": {
    "node": ">=12.16.1"
  },
  "author": "Raúl Contreras Rubio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quienmedebe/api-rest.git"
  },
  "bugs": {
    "url": "https://github.com/quienmedebe/api-rest/issues"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "check-package-manager": "node -e \"!process.env.npm_config_user_agent.startsWith('npm/') && !console.log('---- USE NPM TO INSTALL DEPENDENCIES ----') && process.exit(1)\"",
    "preinstall": "npm run check-package-manager --silent",
    "test": "mocha ./test/* --watch",
    "start": "NODE_ENV=production node ./src/bin/www",
    "dev": "NODE_ENV=development nodemon ./src/bin/www",
    "docs": "jsdoc ./src -r -c ./.jsdoc.json -R README.md -t ./node_modules/ink-docstrap/template -d ./docs/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs ; pretty-quick --staged"
    }
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "rate-limiter-flexible": "^2.1.10",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.3.0",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.5",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "sinon": "^9.0.3"
  }
}
